= simple_form_for(@article) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :tag_list
    = f.input :content, :as => :ckeditor, :input_html => { :ckeditor => { :height => 400 } }
    = f.input :kype, :collection => ['IT','Rails', 'OS X'], :default => "IT", label: false, placeholder: "Type"

  .form-actions
    = f.button :submit
